@import "./variable.styl"
@charset "UTF-8";

@font-face {
  font-family: "luxisr";
  src: url("../fonts/luxisr.woff2") format("woff2"),
       url("../fonts/luxisr.woff") format("woff"),
       url("../fonts/luxisr.ttf") format("truetype"),
       url("../fonts/luxisr.eot") format("embedded-opentype"),
       url("../fonts/luxisr.svg") format("svg");
  font-weight: normal;
  font-style: normal;
}

/** 公共样式 **/
// 通用
*
  margin 0
  padding: 0
  outline: none 
  box-sizing border-box

body, html
  line-height 1
  font-family "luxisr","Microsoft YaHei","微软雅黑",Arial,"Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB",sans-serif
  // user-select: none
  font-size 14px
  color #606266
  -webkit-tap-highlight-color transparent
  background-color #F5F7FA
  margin 0
  padding 0 
body, html
  height 100%
body
  height 100%
  min-width 1366px

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap